<div class="container col-10 col-lg-4 d-flex flex-column justify-content-center my-5">

  <h1 class="text-center">Sign up</h1>
  <%= render "devise/shared/links" %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="d-flex flex-column form-inputs my-5 bw_form-inputs-no-border justify-content-center text-center">
      <%= f.input :email, label:'Enter your e-mail address :', placeholder: 'Type in  your e-mail ',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: 'Enter your password :', placeholder: 'Type in the password',
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: 'Confirm your password :', placeholder: 'Type in the password again',
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :nickname, label:'Choose a nickname :', placeholder: 'Type in  your nickname ',
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "nickname" } %>
      <%= f.input :avatar_file, :as => :hidden,
                  required: true, input_html: { id: 'avatar' } %>

      <label class="string required">Choose your avatar: *</label>
      <div class="avatars-container row row-cols-3">
        <% @avatars = Avatar.get_user_avatars %>
          <% @avatars.each do |avatar| %>
            <div class="avatars col" data-avatar=<%="avatars/users/#{avatar}.svg"%>>
              <%= show_svg("avatars/users/#{avatar}.svg") %>
            </div>
          <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn btn-primary w-100 fixed-bottom btn-lg rounded-0' %>
    </div>
    <% end %>


  </div>
</div>

