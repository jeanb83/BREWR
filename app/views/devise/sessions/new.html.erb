<div class="container my-5 text-center">

  <h2 class=" ">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs my-5 bw_form-inputs-no-border align-self-center">
      <%= f.input :email, label: 'Enter your e-mail address :', placeholder: 'type in  your e-mail ',
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: 'Enter your password :', placeholder: 'type in the password',
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-primary w-100 fixed-bottom btn-lg rounded-0' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
