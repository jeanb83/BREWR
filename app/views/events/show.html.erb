<% @page_title = "#{@event.title} (#{@event.stage})" %>
<% @back_button = "group" %>
<% @cog_button = "event" %>
<% @show_bolt_button = false %>
<%= render 'shared/navbar' %>

<% if @event.stage == 1 %>
    <%= render 'show_stage1' %>

  <% elsif @event.stage == 1 %>
    <%= render 'show_waiting' %>

  <% elsif @event.stage == 2 %>
    <%= render 'show_stage2' %>

  <% else %>
    <%= render 'show_stage3' %>

<% end %>

<%= render 'shared/bottombar' %>