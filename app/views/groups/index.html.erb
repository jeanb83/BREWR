<% @page_title = "Groups" %>
<% @back_button = "dashboard" %>
<% @cog_button = "user" %>

<%= render "shared/navbar"  %>

<div class="container d-flex flex-column justify-content-center mt-4 bw_padding-bottom-1">

    <% @groups.each do |group| %>

    <div class="bw_group d-flex flex-row justify-content-left align-items-center py-3 px-0 pr-3">
      <div class="col-2 pl-0">
        <%= show_svg(group.avatar_file) %>
      </div>

      <div class="flex-grow-1 justify-content-between d-flex flex-row align-items-center">
        <strong class="text-dark"><%= link_to group.title, group_path(group) %></strong>
        <small class="text-muted"><i class="fas fa-user-friends"></i> <%= group.group_memberships.count %></small>
      </div>
    </div>

    <% end %>

    <div class="bw_group d-flex flex-row justify-content-left align-items-center py-3 px-0">
      <div class="col-2 pl-0">
        <%= show_svg("avatars/plus.svg") %>
      </div>
      <strong class="text-dark"><%= link_to "Add a new group", new_group_path %></strong>
    </div>
  </div>

<%= render "shared/bottombar"  %>
