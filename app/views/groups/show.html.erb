<% @page_title = @group.title %>
<% @back_button = "dashboard" %>
<% @cog_button = "group" %>
<% @show_bolt_button = true %>

<%= render 'shared/navbar' %>

<div class="container d-flex flex-column justify-content-between">
  <div class="d-flex flex-column justify-content-center align-items-center mt-4">
    <h2>Events</h2>
    <ul class="list-inline">
      <li class="list-inline-item"><%= link_to "New event", new_group_event_path(@group) %></li>
      <% @events.each do |event| %>
      <li class="list-inline-item"><%= link_to event_path(event) do %><div class="avatar"><%= show_svg(event.avatar_file) %></div><% end %></li>
      <% end %>
    </ul>
    
  </div>

  <div class="chat">
    <h2>Messages</h2>
    <% if @group.messages %>
      <div class="messages border-top border-bottom border-primary">
        <% @group.messages.each do |message| %>
          <div class="message mb-4">
            <strong><%= message.user.nickname %></strong><small> on <%= message.created_at %></small>
            <p><%= message.content %></p>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= render "messages/new", group: @group, message: @message %>
  </div>
</div>
<%= render 'shared/bottombar' %>
