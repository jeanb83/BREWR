<% if @back_button == "group" %>
  <%= link_to group_path(@group) do %><i class="fas fa-chevron-circle-left"></i><% end %>
<% elsif @back_button == "event" %>
  <%= link_to event_path(@event) do %><i class="fas fa-chevron-circle-left"></i><% end %>
<% elsif @back_button == "dashboard" %>
  <%= link_to dashboard_path do %><i class="fas fa-chevron-circle-left"></i><% end %>
<% elsif @back_button == "logout" %>
  <%= link_to destroy_user_session_path do %><i class="fas fa-sign-out-alt"></i><% end %>
<% else %>
  <div></div>
<% end %>